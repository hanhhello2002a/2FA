  <script>
    $(document).ready(function() {
      var interval;
      $("#get").click(function() {
        $("#processbar").val("0");
        $("#count-down").html("30");
        clearInterval(interval);
        interval = null;
        var count = 30;

        function loadlink() {
          $('#res-code').load('https://www.nguyenlieufb.xyz/ajax/tools/get-code-2fa.php', {
            secrect: $("#secrect-key").val()
          });
        }
        loadlink();
        interval = setInterval(function() {
          count--;
          if (count === 0) {
            count = 30;
            loadlink()
          }
          $("#count-down").html(count);
          $("#processbar").val(30 - count);
        }, 1000);
      });
    });
  </script>

